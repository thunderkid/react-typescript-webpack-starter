{
    "name": "react-typescript-webpack-starter",
    "version": "3.0.0",
    "description": "A starter project for using React, TypeScript, SCSS and Webpack",
    "main": "index.js",
    "scripts": {
        "dev": "webpack serve --mode development --progress --hot --config ./webpack.config.development.js",
        "build": "webpack --mode production --config ./webpack.config.production.js",
        "test": "mocha src/tests/**/*.spec.ts",
        "test2": "mocha --require ts-node/register tests/**/*.spec.ts"
    },
    "keywords": [
        "react",
        "typescript",
        "webpack",
        "scss"
    ],
    "author": "Grant Bartlett",
    "license": "MIT",
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/chai": "^4.3.11",
        "@types/chai-as-promised": "^7.1.8",
        "@types/mocha": "^10.0.6",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "chai": "^4.3.10",
        "chai-as-promised": "^7.1.1",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.8.1",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.6.0",
        "mini-css-extract-plugin": "^2.7.6",
        "mocha": "^10.2.0",
        "postcss": "^8.4.32",
        "postcss-loader": "^7.3.3",
        "postcss-preset-env": "^9.3.0",
        "sass": "^1.69.5",
        "sass-loader": "^13.3.2",
        "style-loader": "^3.3.3",
        "terser-webpack-plugin": "^5.3.9",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.3",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.15.1"
    }
}
